<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="css/styles.css" rel="stylesheet" type="text/css">
    <title>Job Search</title>
  </head>
  <body>
    <div class="container">
      <form action="/search" method="post">
        <div class="form-group">
          <label for="year">Enter The Year:</label>
          <input id="year" name="year" class="form-control" type="number" min="1990" max="2020">
        </div>
        <div class="form-group">
          <label for="jobTitle">Enter Job Title:</label>
          <input id="jobTitle" name="jobTitle" class="form-control" type="text">
        </div>
        <div class="form-group">
          <label for="company">Enter Company Name:</label>
          <input id="company" name="company" class="form-control" type="text">
        </div>

        <button type="submit" class="btn bg-primary">Search</button>
      </form>
      <form action='/delete' method='post'>
        <button type='submit' class="btn bg-danger">delete</button>
      </form>

      <div class="output">
        {% if alljobs is not empty %}
          <p>You have searched:</p>
          {% for job in alljobs %}
            <li>Year: {{ job.year }}</li>
            <li>Job Title: {{ job.getJobTitle }}</li>
            <li>Company: {{ job.getCompany }}</li>
          {% endfor %}
        {% endif %}
      </div>

      <div class="outputOne">
        {% if matchjobs is not empty %}
          <p>We found a match:</p>
          {% for matchjob in matchjobs %}
            <li>Year: {{ matchjob.year }}</li>
            <li>Job Title: {{ matchjob.getJobTitle }}</li>
            <li>Company: {{ matchjob.getCompany }}</li>
          {% endfor %}
        {% endif %}
      </div>
    </div>
  </body>
</html>
